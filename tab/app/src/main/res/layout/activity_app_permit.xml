<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appPermitActivity">

    <LinearLayout
        android:id="@+id/permitConst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/permitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보 동의 설정"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/adpermitSwt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="광고성 정보 수신 동의"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/adpermitTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="다양한 할인 혜택 및 이벤트 등 정보를 서비스에서
            볼 수 있습니다.
            \n 1. 항목: 마케팅 수신 동의
            \n 2. 목적: 서비스 및 이벤트 정보 안내
            \n 3. 기간: 탈퇴 후 최대 1년"
            />

        <Switch
            android:id="@+id/gpspermitSwt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS 정보 동의"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/gpspermitTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="더 정확한 위치 및 경로를 알 수 있습니다."
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>